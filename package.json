{
  "name": "typedown",
  "version": "0.0.1",
  "author": "HiDeoo",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "scripts": {
    "build": "yarn workspace typedown-extension run build",
    "postbuild": "yarn workspace typedown-webview run build",
    "lint": "prettier --check . && eslint --max-warnings=0 --ext .ts,.svelte packages && yarn workspace typedown-webview run lint",
    "test": "yarn workspace typedown-extension run test",
    "prepare": "husky install"
  },
  "activationEvents": [
    "onCommand:typedown.tsToMd"
  ],
  "contributes": {
    "commands": [
      {
        "command": "typedown.tsToMd",
        "title": "TypeScript to Markdown"
      }
    ]
  },
  "main": "dist",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2"
  },
  "lint-staged": {
    "*.{ts,svelte}": "yarn lint",
    "**/*": "prettier --write --ignore-unknown"
  }
}
