{
  "name": "typedown",
  "version": "0.0.1",
  "author": "HiDeoo",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "scripts": {
    "build": "yarn workspace typedown-extension run build",
    "postbuild": "yarn workspace typedown-webview run build",
    "lint": "prettier --check . && eslint --max-warnings=0 --ext .ts,.svelte packages && yarn workspace typedown-webview run lint",
    "test": "yarn workspace typedown-extension run test",
    "vsce:ls": "vsce ls --no-yarn",
    "vsce:package": "vsce package --no-yarn",
    "vsce:publish": "vsce publish --no-yarn",
    "vscode:prepublish": "yarn build",
    "prepare": "husky install"
  },
  "activationEvents": [
    "onCommand:typedown.fileToMd",
    "onCommand:typedown.folderToMd"
  ],
  "contributes": {
    "commands": [
      {
        "command": "typedown.fileToMd",
        "title": "File Definitions to Markdown",
        "category": "Typedown"
      },
      {
        "command": "typedown.folderToMd",
        "title": "Folder Definitions to Markdown",
        "category": "Typedown"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "typedown.fileToMd",
          "when": "editorLangId == typescript ||Â editorLangId == typescriptreact"
        }
      ]
    }
  },
  "main": "dist",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2"
  },
  "lint-staged": {
    "*.{ts,svelte}": "yarn lint",
    "**/*": "prettier --write --ignore-unknown"
  }
}
